{
  "name": "node-express-typescript",
  "version": "1.0.0",
  "description": "Node.js setup with Express and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build-only-server": "rimraf dist && tsc",
    "build": "rimraf dist && tsc && npm i --prefix ./web-app && npm run --prefix ./web-app build",
    "preserve": "npm run build",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start-dev": "npm run build-only-server && cross-env NODE_ENV=production node dist/index.js & (npm run --prefix ./web-app start)",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appseating/seatingchartapp.git"
  },
  "author": "Deepak Ramalingam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/appseating/seatingchartapp/issues"
  },
  "homepage": "https://github.com/appseating/seatingchartapp#readme",
  "dependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.22",
    "body-parser": "^1.19.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "p5": "^1.4.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7"
  },
  "engines": {
    "node": "14.17.0",
    "npm": "6.14.13"
  }
}
